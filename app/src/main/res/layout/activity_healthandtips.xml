<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"

    android:layout_height="match_parent"
    tools:context=".healthandtips">

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/l1"

    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
    android:id="@+id/c1"
    app:cardBackgroundColor="#c9c9c9"
    app:cardElevation="10dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:text="করোনার উপসর্গ ও করনীয়"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="center"
        app:autoSizeTextType="uniform"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    </androidx.cardview.widget.CardView>

</LinearLayout>

    <RelativeLayout

        android:layout_below="@+id/l1"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#f0f8ff"
        app:cardElevation="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:text="  1"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_gravity="center"
                app:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="50dp"
                    android:text="  2"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15sp"

                    app:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="50dp"
                    android:text="  3"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15sp"

                    app:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="50dp"
                    android:text="  4"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15sp"

                    app:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="50dp"
                    android:text="  5"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15sp"

                    app:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="50dp"
                    android:text="  6"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15sp"

                    app:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

            </RelativeLayout>





        </LinearLayout>


    </androidx.cardview.widget.CardView>


    </RelativeLayout>






    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:background="#f0f8ff"
        android:layout_below="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#f0f8ff"
            app:cardElevation="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t1"
                        android:layout_marginTop="10dp"
                        android:text="সন্দেহভাজন করোনা রোগীর ক্ষেত্রে "
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp"


                        android:layout_gravity="center"
                        app:autoSizeTextType="uniform"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t2"
                        android:layout_marginTop="50dp"
                        android:text="মৃদু উপসর্গের ক্ষেত্রে"
                        android:textAlignment="center"
                        android:textColor="#000"

                        android:textSize="15sp"

                        app:autoSizeTextType="uniform"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t3"
                        android:layout_marginTop="50dp"
                        android:text="মাঝারি উপসর্গের ক্ষেত্রে"
                        android:textAlignment="center"
                        android:textColor="#000"

                        android:textSize="15sp"

                        app:autoSizeTextType="uniform"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t4"
                        android:layout_marginTop="50dp"
                        android:text="তীব্র উপসর্গের ক্ষেত্রে"
                        android:textAlignment="center"
                        android:textColor="#000"

                        android:textSize="15sp"

                        app:autoSizeTextType="uniform"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t5"
                        android:layout_marginTop="50dp"
                        android:text="পোস্ট কভিড উপসর্গের ক্ষেত্রে"
                        android:textAlignment="center"
                        android:textColor="#000"

                        android:textSize="15sp"

                        app:autoSizeTextType="uniform"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/t6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:text="করোনার নতুন লক্ষণ সমূহ"

                        android:textAlignment="center"
                        android:textColor="#000"

                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:autoSizeTextType="uniform" />


                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView

            app:cardBackgroundColor="#c9c9c9"
            app:cardElevation="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp">



        </androidx.cardview.widget.CardView>

    </LinearLayout>



</RelativeLayout>